{
  "version": 8,
  "name": "Middle Earth",
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "zoom": 0,
  "sources": {
    "middleearth": {
      "type": "raster",
      "tiles": ["./tiles/{z}/{x}/{y}.jpg"],
      "tileSize": 256,
      "minzoom": 0,
      "maxzoom": 0,
      "coordinates": [
        [0, 0],
        [3525, 0],
        [3525, -2475],
        [0, -2475]
      ]
    },
    "locations": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "geometry": {
              "type": "Point",
              "coordinates": [-6, 62]
            },
            "properties": {
              "name": "Rivendell",
              "type": "city",
              "description": "Hidden valley of the Elves"
            }
          },
          {
            "type": "Feature",
            "geometry": {
              "type": "Point",
              "coordinates": [-87, 58]
            },
            "properties": {
              "name": "Shire",
              "type": "region",
              "description": "Home of the Hobbits"
            }
          },
          {
            "type": "Feature",
            "geometry": {
              "type": "Point",
              "coordinates": [63, -36]
            },
            "properties": {
              "name": "Mount Doom",
              "type": "landmark",
              "description": "The fires of Mount Doom"
            }
          }
        ]
      }
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#000"
      }
    },
    {
      "id": "middleearth",
      "type": "raster",
      "source": "middleearth"
    },

    {
      "id": "location-circles",
      "type": "circle",
      "source": "locations",
      "paint": {
        "circle-radius": ["interpolate", ["linear"], ["zoom"], -2, 3, 2, 8],
        "circle-color": [
          "case",
          ["==", ["get", "type"], "city"],
          "#FFD700",
          ["==", ["get", "type"], "region"],
          "#32CD32",
          ["==", ["get", "type"], "landmark"],
          "#FF6347",
          "#FFFFFF"
        ],
        "circle-stroke-color": "#FFFFFF",
        "circle-stroke-width": 1,
        "circle-opacity": 0.8
      }
    },
    {
      "id": "location-labels",
      "type": "symbol",
      "source": "locations",
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], -2, 12, 2, 18],
        "text-anchor": "bottom",
        "text-offset": [0, -1.2],
        "text-allow-overlap": false,
        "text-ignore-placement": false,
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "#FFFFFF",
        "text-halo-color": "#000000",
        "text-halo-width": 1
      }
    }
  ]
}
